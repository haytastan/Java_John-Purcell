
class Person {
    
    // Instance variables (data or "state")
    String name;
    int age;
    
    
    // Classes can contain
    
    // 1. Data
    // 2. Subroutines (methods)
}


public class App {

    public static void main(String[] args) {
        
        
        // Person class'ın içerisinde sadece field constructor olsa idi manuel olarak 
        // non-parameterized constructor da yaratılmalıydı. 
        // ancak class person'da herhangi bir constructor olmadığından 
        // non-parameterized constructor default olarak yaratılır
        Person person1 = new Person(); 
        // Create a Person object using the Person class
        
        // on the left side we declare a variable of type person
        // on the right side we are creating a person object, an object of type person
        person1.name = "Joe Bloggs";
        person1.age = 37;
        
        // Create a second Person object
        Person person2 = new Person();
        person2.name = "Sarah Smith";
        person2.age = 20;
        
        System.out.println(person1.name);
        
    }

}
